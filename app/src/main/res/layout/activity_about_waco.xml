<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center">

    <!-- Obrazek jako tło -->
    <ImageView
        android:id="@+id/background_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/tlo" />

    <!-- Półprzezroczysta nakładka rozjaśniająca -->
    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#80FFFFFF" />

    <!-- Toolbar -->
    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true" />

    <!-- Logo firmy -->
    <ImageView
        android:id="@+id/company_logo"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/icon"
        android:layout_marginTop="70dp"
        android:layout_centerHorizontal="true" />

    <!-- Tytuł -->
    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/waco"
        android:textSize="24sp"
        android:textStyle="bold"
        android:padding="15sp"
        android:layout_below="@id/company_logo"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true" />

    <!-- Opis firmy -->
    <TextView
        android:id="@+id/company_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/o_firmie"
        android:textSize="15sp"
        android:padding="15sp"
        android:layout_below="@id/title"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true" />

    <!-- Link do strony internetowej -->
    <TextView
        android:id="@+id/company_website"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="www.waco-coatings.com.pl"
        android:textSize="16sp"
        android:textColor="@android:color/holo_blue_dark"
        android:layout_below="@id/company_description"
        android:layout_marginTop="20dp"
        android:autoLink="web"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
